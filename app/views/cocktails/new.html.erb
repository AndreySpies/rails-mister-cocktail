<div id="sec-nav" class="sec-navbar">
  <h3>
    <%= link_to "Mister Cocktails", cocktails_path %>
  </h3>
  <%= link_to "Criar um Cocktail", new_cocktail_path, class: 'create-cocktail-btn' %>
</div>

<div class="form">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-md-6">
        <h1>Create a Cocktail</h1>

        <%= simple_form_for(@cocktail) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name %>
        </div>

        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden, class: 'upload-file' %>

        <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-outline-dark' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
